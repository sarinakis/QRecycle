<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/darkerBgColor"
    tools:context=".QRCameraActivity">

    <FrameLayout
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="@drawable/qr_render_cam_scanner_square"/>

    <Button
        android:id="@+id/scanQRBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="8dp"
        android:background="@drawable/shape_button_dark_blue_rounded"
        android:text="Scan QR code"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:textSize="22sp"
        android:textAllCaps="false"
        />



</LinearLayout>